@model IEnumerable<ReviewApplication>

@{
    ViewData["Title"] = "Review Application";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application List</h2>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Company Name
                </th>
                <th>
                    Status
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Application.CompanyName
                    </td>                    
                    <td width="40%">
                        @obj.Status.StatusDesc
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="ReviewApplications" asp-action="Upsert" asp-route-id="@obj.Id"
                           class="btn btn-secondary mx-2"> <i class="bi bi-pencil-square"></i>Review</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>