@model wildcatMicroFund.Areas.Entrepreneur.ViewModels.ApplicationFormVM
@{
    ViewData["Title"] = "New Applications";
}

<form method="post" asp-controller="NewApplication" asp-action="Create" enctype="multipart/form-data">
    <div class="container">
        <div class="row justify-content-evenly text-center px-2 mx-2 backgroundWhite border">
            @* All for Model validation and HTML validation *@
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Application.CompanyName"></label>
                    </div>
                    <div class="col-9">
                        <input id="name" class="form-control" asp-for="Application.CompanyName" />
                        <span class="text-danger" asp-validation-for="Application.CompanyName"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Application.CreatedDate">Created Date</label>
                    </div>
                    <div class="col-9">
                        <input id="createdDate" class="form-control" asp-for="Application.CreatedDate" />
                        <span class="text-danger" asp-validation-for="Application.CreatedDate"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="row justify-content-center">
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary form-control">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>