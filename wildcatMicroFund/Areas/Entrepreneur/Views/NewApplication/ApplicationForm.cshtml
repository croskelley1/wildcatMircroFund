@model wildcatMicroFund.Areas.Entrepreneur.ViewModels.ApplicationFormVM
@{
    ViewData["Title"] = "New Applications";
}

<form method="post" asp-controller="NewApplication" asp-action="Create" enctype="multipart/form-data">
    <div class="container">
        <div class="row justify-content-evenly text-center px-2 mx-2 backgroundWhite border">
            @* All for Model validation and HTML validation *@
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-12 px-3" style="border-bottom:1px solid #325d88">
                <h2 class="text-primary">Submit Application</h2>
            </div>
            <div class="col-8 pt-3">
                <div class="form-group row py-1">
                    <div class="col-3">
                        <label asp-for="Application.CompanyName"></label>
                    </div>
                    <div class="col-9">
                        <input id="name" class="form-control" asp-for="Application.CompanyName" />
                        <span class="text-danger" asp-validation-for="Application.CompanyName"></span>
                    </div>
                </div>

                @* For loop to display questions *@
                @for(int i = 0; i < Model.Questions.Count; i++) {
                    <div class="form-group row py-1">
                        <div class="col-3">    
                            <label asp-for="@Model.rawResponses[i]">@Model.Questions[i].QuestionSummary</label>
                        </div>
                        <div class="col-9">
                            <input id="name" class="form-control" asp-for="@Model.rawResponses[i]" />
                            <span class="text-danger" asp-validation-for="@Model.rawResponses[i]"></span>
                        </div>
                    </div>
                }
                <input readonly type="hidden" asp-for="Questions" />
                <div class="form-group row m-2">
                    <div class="col-12" style="border-top:1px solid #325d88">
                        <div class="row m-2">
                            <div class="col-2 offset-3">
                                <button type="submit" class="btn btn-primary form-control">Submit</button>

                            </div>
                            <div class="col-3">
                                <a asp-area="Entrepreneur" asp-controller="NewApplication" asp-action="Index" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>