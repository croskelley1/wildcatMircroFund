@model wildcatMicroFund.Areas.Admin.ViewModels.IntakeApplicationVM
@{
    ViewData["Title"] = "Submit Application";
}
<form method="post" asp-area="Entrepreneur" asp-controller="NewApplication" asp-action="FillApp" enctype="multipart/form-data">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            @* All for Model validation and HTML validation *@
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-12 px-3" style="border-bottom:1px solid #325d88">
                <h2 class="text-primary">Submit Application</h2>
            </div>
            <div class="col-11 pt-3 offset-1">

                <div class="form-group row m-2">
                    <div class="col-4 offset-2">
                        <h4>Company Name:</h4>
                    </div>
                    <div class="col-4">
                        <input class="form-control" placeholder="Start typing..." asp-for="Application.CompanyName" />
                    </div>
                </div>

                <div class="form-group row m-2">

                    <div class="col-4 offset-2">
                        <h4>What is the status of your business?</h4>
                    </div>
                    <div class="col-4">
                        <input class="form-control" placeholder="Start typing..." asp-for="Question1.Responses" />
                    </div>

                </div>

                <div class="form-group row m-2">

                    <div class="col-4 offset-2">
                        <h4>Tell us about your products/service</h4>
                    </div>
                    <div class="col-4">
                        <textarea class="form-control" placeholder="Start typing..." rows="3" asp-for="Question2.Responses"></textarea>
                    </div>

                </div>

                <div class="form-group row m-2">

                    <div class="col-4 offset-2">
                        <h4>What industry is your business in?</h4>
                    </div>
                    <div class="col-4">
                        <input class="form-control" placeholder="Start typing..." asp-for="Question3.Responses" />
                    </div>

                </div>

                <div class="form-group row m-2">

                    <div class="col-4 offset-2">
                        <h4>Do you have a website?</h4>
                    </div>
                    <div class="col-4">
                        <input class="form-control" placeholder="Start typing..." asp-for="Question4.Responses" />
                    </div>

                </div>

                <div class="form-group row m-2">

                    <div class="col-4 offset-2">
                        <h4>Do you have a prototype?</h4>
                    </div>
                    <div class="col-4">
                        <input class="form-control" placeholder="Start typing..." asp-for="Question5.Responses" />
                    </div>

                </div>


                <div class="form-group row m-2">
                    <div class="col-12" style="border-top:1px solid #325d88">
                        <div class="row m-2">
                            <div class="col-2 offset-3">
                                <button type="submit" class="btn btn-primary form-control">Submit</button>

                            </div>
                            <div class="col-3">
                                <a asp-area="Entrepreneur" asp-controller="NewApplication" asp-action="Index" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
</form>
