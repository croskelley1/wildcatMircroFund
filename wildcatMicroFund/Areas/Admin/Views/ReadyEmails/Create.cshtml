@model ReadyEmail
@{
    ViewData["Title"] = "Create";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Template</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
            <div class="form-group">
                <label asp-for="UserID" class="control-label"></label>
                <select asp-for="UserID" class="form-control" asp-items="ViewBag.Users"></select>
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailTemplateId" class="control-label"></label>
                <select asp-for="EmailTemplateId" class="form-control" asp-items="ViewBag.EmailTemplates"></select>
                <span asp-validation-for="EmailTemplateId" class="text-danger"></span>
            </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="ReadyEmails" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
            <script>
      tinymce.init({
        selector: '#mytextarea'
      });
    </script>
    }
    }