@{
    ViewData["Title"] = "Email Templates";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Email Templates</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="EmailTemplates" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Template
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Template Name
                </th>
                <th>
                    Last Modified
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.EmailTemplateName
                    </td>
                    <td width="15%">
                        @obj.EditDate.ToString("MM/dd/yyyy")
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="EmailTemplates" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="EmailTemplates" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>