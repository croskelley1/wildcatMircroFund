@model EmailTemplate
@{
    ViewData["Title"] = "Edit Email Template";
}
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Template</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="EmailTemplateName"></label>
            <input asp-for="EmailTemplateName" class="form-control" />
            <span asp-validation-for="EmailTemplateName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="TemplateSubject"></label>
            <input asp-for="TemplateSubject" class="form-control" />
            <span asp-validation-for="TemplateSubject" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="TemplateContent"></label>
            @*<input asp-for="TemplateContent" class="form-control" />*@
            <textarea id="mytextarea" class="form-control" style="height:200px;" asp-for="TemplateContent"></textarea>
            <span asp-validation-for="TemplateContent" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="EmailTemplates" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
                    <script>
      tinymce.init({
        selector: '#mytextarea'
      });
    </script>
    }
    }