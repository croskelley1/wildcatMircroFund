@model wildcatMicroFund.Areas.Mentor.ViewModels.ReviewApplicationVM
@{
    ViewData["Title"] = "Update Application";
}
<form method="post" asp-controller="AdminReviewApplications" asp-action="Upsert" enctype="multipart/form-data">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            @* All for Model validation and HTML validation *@
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-12 px-3" style="border-bottom:1px solid #325d88">
                <h2 class="text-primary">Update Application - @Model.Application.CompanyName</h2>
            </div>
            <div class="col-10 pt-3 offset-2">
                <div class="form-group row">
                    <div class="col-4">
                        <h5>Company Name:</h5>
                    </div>
                    <div class="col-4 offset-2">
                        <h5>@Model.Application.CompanyName</h5>
                    </div>
                </div>
                @foreach (var user in Model.AssignedUsers)
                {
                    <div class="form-group row">
                        <div class="col-4">
                            <h5>@user.UserApplicationAssignmentType.UserApplicationAssignmentDesc Name:</h5>
                        </div>
                        <div class="col-6 offset-2">
                            <h5>@user.ApplicationUser.FullName</h5>
                        </div>
                    </div>
                }


                <div class="form-group row mt-2 ">
                    <div class="col-6">
                        <div class="row mt-2">
                            <h6>
                                What is the status of your business?
                            </h6>
                        </div>
                        <div class="row mt-2">
                            <h6>
                                Tell us about your product/service.
                            </h6>
                        </div>
                        <div class="row mt-2">
                            <h6>
                                What industry is your business in?
                            </h6>
                        </div>
                        <div class="row mt-2">
                            <h6>Do you have a website?</h6>
                        </div>
                        <div class="row mt-2">
                            <h6>
                                Do you have a Prototype?
                            </h6>
                        </div>
                    </div>
                    <div class="col-6">
                        @foreach(var answer in Model.Responses)
                        {
                            <div class="row mt-2">
                                <h6>@answer.Responses</h6>
                            </div>
                        }
                    </div>
                </div>
                
                <div class="form-group row mt-2">
                    <div class="col-12">
                        @*These hide the values from the user, but allow the update button to pass the values back through the VM object*@
                        <input readonly type="hidden" asp-for="ReviewApplication.AppStatId" />
                        <input readonly type="hidden" asp-for="ReviewApplication.ApplicationId" />
                        <input readonly type="hidden" asp-for="ReviewApplication.UserID" />
                        <input readonly type="hidden" asp-for="ReviewApplication.StatusDate" />
                    </div>
                </div>

                <div class="form-group row m-2">
                    <div class="col-4">
                        <h4><label asp-for="ReviewApplication.StatusId">Status:</label></h4>
                    </div>
                    <div class="col-3">
                        @Html.DropDownListFor(m => m.ReviewApplication.StatusId,
                        Model.StatusList,
                        " - Please select a new status - ",
                        new { @class = "form-control", @id="ddlStatus" })
                        <span class="text-danger" asp-validation-for="ReviewApplication.StatusId"></span>
                    </div>
                </div>
                
                <div class="form-group row m-2">
                    <div class="col-12" style="border-top:1px solid #325d88">
                        <div class="row m-2">
                            <div class="col-2 offset-3">
                                <button type="submit" class="btn btn-primary form-control">Update</button>
                                                               
                            </div>
                            <div class="col-3">
                                <a asp-controller="AdminReviewApplications" asp-action="Index" class="btn btn-success form-control">Back to List</a>
                            </div>
                            <div class="col-2">
                                <a asp-area="Mentor" asp-controller="MentorNotes" asp-action="Index" asp-route-appId="@Model.Application.Id" class="btn btn-primary">Notes</a>
                            </div>
                        </div>
                    </div>
                </div>
            
            </div>
        </div>
    </div>
</form>
