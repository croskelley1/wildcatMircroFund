<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Wildcat Micro Fund</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/wildcatMicroFund.styles.css" asp-append-version="true" />

    <style>
        /* Modify the background color */

        .navbar-custom {
            background-color: mediumpurple;
        }
            /* Modify brand and text color */

            .navbar-custom .navbar-brand,
            .navbar-custom .navbar-text {
                color: black;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm  navbar-custom border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Wildcat Micro Fund</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Admin</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="AdminReviewApplications" asp-action="Index">Review Applications</a>
                                    <a class = "dropdown-item" asp-area="Admin" asp-controller="ReadyEmails" asp-action="Index">Ready Emails</a>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="EmailTemplates" asp-action="Index">Email Templates</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-area="Admin" asp-page="/Users/Index">Manage Users</a>
                                    <a class="dropdown-item" asp-area="Admin" asp-page="/Roles/Index">Manage Roles</a>
                                    
                                </div>
                            </li>
                        }
                        @if (User.IsInRole("Mentor"))
                        {               
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Mentor</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-area="Mentor" asp-controller="ReviewApplications" asp-action="Index">Review Applications</a>
                                </div>
                            </li>
                        }
                        @if (User.IsInRole("Judge"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Judge</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-area="Judge" asp-controller="PitchCriteria" asp-action="PitchCriteria">Pitch Criteria</a>
                                </div>
                            </li>
                        }
                        @if (User.IsInRole("Entrepreneur"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Entrepreneur</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-area="Entrepreneur" asp-controller="NewApplication" asp-action="Index">New Applications</a>
                                </div>
                            </li>
                        }
                        
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Wildcat Micro Fund - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.tiny.cloud/1/ohadaohmf91jvv2564io2ufpv3xliig1yx3vjr9a1jflzmoj/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
